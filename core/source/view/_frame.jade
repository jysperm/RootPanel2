doctype 5
html
  head
    meta(charset='utf-8')
    block head
      link(rel="shortcut icon", type="image/x-icon", href="{=StaticPrefix}/image/icon.png")
      link(rel="stylesheet", type="text/css", href="{=StaticPrefix}/library/bootstrap/css/bootstrap.min.css")
  body
    header.navbar-fixed-top
      .container
        nav.navbar.navbar-default.navbar-inverse(role='navigation')
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/')= t('app.name')
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav
              li
                a(href='/topic/')= t('word.topic')
              li
                a(href='/node/')= t('word.node')
              li
                a(href='/member/')= t('word.user')
            form.navbar-form.navbar-left(role='search')
              .form-group
                input.form-control(type='text', placeholder='Search')
            ul.nav.navbar-nav.navbar-right
              if account
                li
                  a(href='/member/#{account.username}/')= account.username
                li
                  a(href='/topic/create/')= t('word.createTopic')
                li
                  a(href='/account/logout/')= t('word.logout')
              else
                li
                  a(href='/account/signup/')= t('word.signup')
                li
                  a(href='/account/login/')= t('word.login')
    #content.container
      .row
        .col-md-9
          if errorMsg
            .row
              .alert.alert-danger.alert-dismissable
                button.close(type='button', data-dismiss='alert', aria-hidden='true') Ã—
                strong= t('word.error')
                p= errorMsg
          block main
        #sidebar.col-md-3
          block sidebar
            .row
              header= t('app.name')
              p= t('app.description')
    #footer
      script(type="text/javascript", src="{=StaticPrefix}/library/jquery/jquery.min.js")
      script(type="text/javascript", src="{=StaticPrefix}/library/bootstrap/js/bootstrap.min.js")

